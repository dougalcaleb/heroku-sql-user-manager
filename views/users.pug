doctype html
html
   head
      title User List
      link(rel='preconnect' href='https://fonts.gstatic.com')
      link(href='https://fonts.googleapis.com/css2?family=Roboto+Mono&display=swap' rel='stylesheet')
      link(rel="stylesheet", type="text/css", href="/public/stylesheet.css")
   body
      h1 #{userCount} users
      table
         tr
            td User ID
            td First Name
            td Last Name
            td Age
            td Email
         for user in users
            tr
               td #{user.id}
               td #{user.firstname}
               td #{user.lastname}
               td #{user.age}
               td #{user.email}
               td
                  a(href="/edit/"+user.id) EDIT
               td
                  a(href="/delete/"+user.id) DELETE
      br
      a(href="/addUser") Add user
      br
      a(href="/search") Search
      br
      a(href="/users") See All Users (Unsorted)